{
  "openapi": "3.1.0",
  "info": {
    "title": "MonkeyOCR API",
    "description": "OCR and Document Parsing API using MonkeyOCR",
    "version": "1.0.0"
  },
  "paths": {
    "/ocr/text": {
      "post": {
        "summary": "Extract text from image or PDF",
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "file": {
                    "type": "string",
                    "format": "binary"
                  }
                },
                "required": [
                  "file"
                ]
              }
            }
          }
        }
      }
    },
    "/ocr/formula": {
      "post": {
        "summary": "Extract formulas from image or PDF",
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "file": {
                    "type": "string",
                    "format": "binary"
                  }
                },
                "required": [
                  "file"
                ]
              }
            }
          }
        }
      }
    },
    "/ocr/table": {
      "post": {
        "summary": "Extract tables from image or PDF",
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "file": {
                    "type": "string",
                    "format": "binary"
                  }
                },
                "required": [
                  "file"
                ]
              }
            }
          }
        }
      }
    },
    "/parse": {
      "post": {
        "summary": "Parse complete document (PDF or image)",
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "file": {
                    "type": "string",
                    "format": "binary"
                  }
                },
                "required": [
                  "file"
                ]
              }
            }
          }
        }
      }
    },
    "/parse/split": {
      "post": {
        "summary": "Parse complete document and split result by pages",
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "file": {
                    "type": "string",
                    "format": "binary"
                  }
                },
                "required": [
                  "file"
                ]
              }
            }
          }
        }
      }
    },
    "/ocr/text/content": {
      "post": {
        "summary": "Extract text from base64 encoded file content",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "file_content": {
                    "type": "string",
                    "description": "Base64 encoded file content"
                  },
                  "filename": {
                    "type": "string",
                    "description": "Original filename with extension",
                    "nullable": true
                  },
                  "file_type": {
                    "type": "string",
                    "description": "File type (pdf, jpg, jpeg, png)",
                    "nullable": true
                  }
                },
                "required": [
                  "file_content"
                ]
              }
            }
          }
        }
      }
    },
    "/ocr/formula/content": {
      "post": {
        "summary": "Extract formulas from base64 encoded file content",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "file_content": {
                    "type": "string",
                    "description": "Base64 encoded file content"
                  },
                  "filename": {
                    "type": "string",
                    "description": "Original filename with extension",
                    "nullable": true
                  },
                  "file_type": {
                    "type": "string",
                    "description": "File type (pdf, jpg, jpeg, png)",
                    "nullable": true
                  }
                },
                "required": [
                  "file_content"
                ]
              }
            }
          }
        }
      }
    },
    "/ocr/table/content": {
      "post": {
        "summary": "Extract tables from base64 encoded file content",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "file_content": {
                    "type": "string",
                    "description": "Base64 encoded file content"
                  },
                  "filename": {
                    "type": "string",
                    "description": "Original filename with extension",
                    "nullable": true
                  },
                  "file_type": {
                    "type": "string",
                    "description": "File type (pdf, jpg, jpeg, png)",
                    "nullable": true
                  }
                },
                "required": [
                  "file_content"
                ]
              }
            }
          }
        }
      }
    },
    "/parse/content": {
      "post": {
        "summary": "Parse complete document from base64 encoded file content",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "file_content": {
                    "type": "string",
                    "description": "Base64 encoded file content"
                  },
                  "filename": {
                    "type": "string",
                    "description": "Original filename with extension",
                    "nullable": true
                  },
                  "file_type": {
                    "type": "string",
                    "description": "File type (pdf, jpg, jpeg, png)",
                    "nullable": true
                  },
                  "split_pages": {
                    "type": "boolean",
                    "description": "Whether to split result by pages",
                    "default": false
                  }
                },
                "required": [
                  "file_content"
                ]
              }
            }
          }
        }
      }
    },
    "/parse/split/content": {
      "post": {
        "summary": "Parse document from base64 content and split result by pages",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "file_content": {
                    "type": "string",
                    "description": "Base64 encoded file content"
                  },
                  "filename": {
                    "type": "string",
                    "description": "Original filename with extension",
                    "nullable": true
                  },
                  "file_type": {
                    "type": "string",
                    "description": "File type (pdf, jpg, jpeg, png)",
                    "nullable": true
                  },
                  "split_pages": {
                    "type": "boolean",
                    "description": "Whether to split result by pages",
                    "default": true
                  }
                },
                "required": [
                  "file_content"
                ]
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "TaskResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean"
          },
          "task_type": {
            "type": "string"
          },
          "content": {
            "type": "string"
          },
          "message": {
            "type": "string",
            "nullable": true
          }
        },
        "required": [
          "success",
          "task_type",
          "content"
        ]
      },
      "ParseResponse": {
        "type": "object",
        "properties": {
          "success": {
            "type": "boolean"
          },
          "message": {
            "type": "string"
          },
          "output_dir": {
            "type": "string",
            "nullable": true
          },
          "files": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "nullable": true
          },
          "download_url": {
            "type": "string",
            "nullable": true
          }
        },
        "required": [
          "success",
          "message"
        ]
      }
    }
  }
}